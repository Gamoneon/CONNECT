#include<stdio.h>
#include<string.h>
int check_palindrome(char *str,int str_len);
int main()
{
	int len;
	char str[30],*ptr;
	printf("Enter the string :");
	ptr=str;
	scanf("%s",ptr);
	len=strlen(str);
	
	printf("The string %s is ",str);
	check_palindrome(str,len)?printf("a palindrome!"):printf("not a palindrome! ");
	return 0;

}
int check_palindrome(char str[],int len)
{
	int cnt=0,flag=0;
	int i=0,j=len-1;
	
	while(cnt<len/2)
	{
		if(str[i++]==str[j--])
		 flag=1;
		 
		else
		 flag=0;
		
		cnt++;
	}
	if(flag) return 1;
	else return 0;
}
